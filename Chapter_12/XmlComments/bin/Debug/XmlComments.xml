            </summary>
            <param name="a">The first number</param>
            <param name="b">The second number</param>
            <returns>A double representing subtraction of a and b</returns>
            <permission cref="M:XmlComments.Calculator.Subtract(System.Int32,System.Int32)">Public method</permission>
            <seealso cref="M:XmlComments.Calculator.Add(System.Int32,System.Int32)"/>
        </member>
        <member name="M:XmlComments.Calculator.Divide(System.Int32,System.Int32)">
            <summary>
